<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThankYouFragment">
    
    <TextView
        android:id="@+id/thankyou_tv"
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:text="Thank You!"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="83dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:lineHeight="29.05dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/user_tv"
        android:layout_width="282dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/thankyou_tv"
        app:layout_constraintStart_toStartOf="@id/thankyou_tv"
        app:layout_constraintEnd_toEndOf="@id/thankyou_tv"
        android:text="Username and password has been sent on \n Your Email/Mobile number"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:textAlignment="center"
        android:textColor="#2A821C"
        android:lineHeight="19.5dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/emoji_layout"
        android:layout_width="240dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/user_tv"
        app:layout_constraintStart_toStartOf="@id/user_tv"
        app:layout_constraintEnd_toEndOf="@id/user_tv"
        android:orientation="horizontal"
        android:layout_marginTop="42dp">

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8px"
            android:background="@drawable/smile_emoji"/>
        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/smile_emoji"/>
        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/smile_emoji"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="282dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/emoji_layout"
        app:layout_constraintStart_toStartOf="@id/emoji_layout"
        app:layout_constraintEnd_toEndOf="@id/emoji_layout"
        android:text="Kindly check it. If any concern please connect trough via customer care"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:textColor="#2A821C"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        android:lineHeight="19.5dp"/>


    
</androidx.constraintlayout.widget.ConstraintLayout>