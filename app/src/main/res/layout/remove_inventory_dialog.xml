<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/remove_from_inventory_tv"
        android:layout_width="271dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Remove From Inventory"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#F70C0C"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="27dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="28dp"
        android:background="#929191"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remove_from_inventory_tv">

        <androidx.cardview.widget.CardView
            android:id="@+id/india_gate_card"
            android:layout_width="79dp"
            android:layout_height="78dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="9dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="46dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/india_gate_rice" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="97dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="163dp"
                android:layout_height="31dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_medium"
                android:text="Basmati Rice"
                android:textSize="18sp" />
           <TextView
               android:layout_width="97dp"
               android:layout_height="19dp"
               android:layout_marginLeft="20dp"
               android:text="India gate"
               android:textSize="12sp"
               android:textColor="#403B3B"/>
            <TextView
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:text="420 Kg"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    
    <TextView
        android:id="@+id/sure_remove_int_tv"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:text="Are you sure want to remove from \n inventroy?"
        android:layout_marginTop="275dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sure_remove_int_tv"
        app:layout_constraintStart_toStartOf="@id/sure_remove_int_tv"
        app:layout_constraintEnd_toEndOf="@id/sure_remove_int_tv">
        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="117dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:text="Cancel"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/inventory_cancel_btn_bg"
            android:layout_marginLeft="80dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="117dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:text="Delete"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/inventory_delete_btn_bg"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="30dp"/>
        
        
    </LinearLayout>
        



</androidx.constraintlayout.widget.ConstraintLayout>